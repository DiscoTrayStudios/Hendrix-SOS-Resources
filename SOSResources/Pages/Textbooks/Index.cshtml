@page
@model SOSResources.Pages.Textbooks.IndexModel

@{
    ViewData["Title"] = "Textbooks";
}

<h1>Textbooks</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Textbook[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Textbook[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Textbook[0].Edition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Textbook[0].Count)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Textbook) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Copies.Count)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
